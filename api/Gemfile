# =============================================================================
# BACKGROUND PROCESSING & REAL-TIME FEATURES
# =============================================================================

gem "redis"
gem "redis-client"
gem "sidekiq", "~> 7.2"
gem "sidekiq-scheduler"

# =============================================================================
# OPEN SOURCE MONITORING & ERROR TRACKING
# =============================================================================

gem "sentry-ruby"           # Self-hosted error tracking
gem "sentry-rails"
gem "sentry-sidekiq"
gem "pghero"               # Database performance monitoring
gem "pg_query"             # PostgreSQL query analysis
gem "prometheus_exporter"  # Metrics export to Prometheus
gem "yabeda-rails"         # Rails metrics collection
gem "yabeda-prometheus"    # Prometheus integration
gem "yabeda-sidekiq"       # Background job metrics

# =============================================================================
# SYSTEM MONITORING (NEW ADDITIONS)
# =============================================================================

gem "sys-filesystem"       # Disk usage monitoring
gem "vmstat"              # CPU and memory monitoring
gem "httparty"           # HTTP client for API integrations

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================

gem "rack-attack"
gem "secure_headers"

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================

gem "lograge"
gem "semantic_logger"

# =============================================================================
# SYSTEM HEALTH & MONITORING
# =============================================================================

gem "health_check"

# =============================================================================
# SELF-HOSTED FILE STORAGE & PROCESSING
# =============================================================================

gem "image_processing"

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

gem "stripe"
gem "stripe_event"

# =============================================================================
# ENVIRONMENT & CONFIGURATION
# =============================================================================

gem "dotenv-rails"

# =============================================================================
# WINDOWS COMPATIBILITY
# =============================================================================

gem "tzinfo-data", platforms: %i[mingw mswin x64_mingw jruby]

