source "https://rubygems.org"

ruby "3.3.7"

# =============================================================================
# CORE RAILS FRAMEWORK
# =============================================================================

gem "rails", "~> 7.1.5", ">= 7.1.5.1"
gem "bootsnap", require: false
gem "pg", "~> 1.1"
